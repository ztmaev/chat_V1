# Docker Environment Configuration for Chat API
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# File Upload Configuration
MAX_FILE_SIZE=16777216  # 16MB in bytes

# Firebase Configuration
# Option 1: Use service account key file (development/local)
# Mount serviceAccountKey.json as volume in docker-compose.yml

# Option 2: Use JSON string (production/cloud deployment)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project-id",...}

# CORS Configuration
# For production, specify allowed origins (comma-separated)
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# For development, use wildcard
CORS_ORIGINS=*
